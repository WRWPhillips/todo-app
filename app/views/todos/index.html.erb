<table>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= link_to todo.name, todo_path(todo) %></td>
      <td><%= button_to 'Edit', edit_todo_path(todo), method: 'get'%></td>
      <td><%= button_to 'Remove', todo_path(todo), method: 'delete', data: { confirm: 'Are you sure?'} %></td>
  <% end %>
</table>
<%= link_to "Add a New Todo", new_todo_path %>