<h3>Create a Todo!</h3>
<%= form_with model: @todo do |form| %>
  <%= form.text_field :name, placeholder: "name" %>
  <%= form.text_field :description, placeholder: "description" %>
  <%= form.label "Do not check if task is not completed." %>
  <%= form.check_box :completed %>
  <%= form.submit %>
<% end %>
